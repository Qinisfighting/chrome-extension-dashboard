{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "src",
    "target": "ES6",
    "module": "ES6",
    "outDir": "build",
    "lib": ["es2016", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },

  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules/gts/node_modules"]
}
